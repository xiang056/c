//字串倒轉工具
//功能:輸入一段字串，顯示字串反過來的效果
#include <stdio.h>
#include <string.h>
int main()
{
    char str[80];
    printf("請輸入一段文字:");
    fgets(str,sizeof(str),stdin);
    
    int len = strlen(str);
    
    for (int i = 0; i < len / 2; i++) 
    {
    char temp = str[i];
    str[i] = str[len - 1 - i];
    str[len - 1 - i] = temp;
    }

    printf("\n反轉後文字:%s\n",str);

    return 0;
}
